<div class="container tijelo">

<div class="row">
    	<div class="col-lg-12">
            <h3 class="page-header">BLOG POSTOVI:
                <hr>
                <h5 class="page-podheader">Vjencanja kroz postove...
                <% if signed_in? %>
                <a href="<%=new_post_path%>" style="float:right; margin-right: 5%; ">
                        <button class="btn btn-default btn-space dugme-post" >Dodaj novi</button>
				    </a></h5>
				 <% end %>
                <hr>
            </h3>

            <div class="col-md-12">
                  
				<div class="row">
					<% @posts.each do |p|%>

					<div class="card zoom" style="width: 20rem; margin-right: 4%; margin-top:10px; ">
					  <img class="card-img-top" src="<%=p.image_url %>" alt="Card image cap">
					  <div class="card-body">
					    <h5 class="card-title"><%= p.title %></h5>
					    <p class="card-text"><%= p.description[0..200].gsub(/\s\w+\s*$/,'...') %></p>
                        
                        <div class="row">
                        	<a href="<%=post_path(p.id)%>" >
                            <button class="btn btn-default btn-space dugme-post" id="dugme_<%= p.id %>">Prikazi vise</button>
							</a>

                            <% if signed_in? %>
							<div class="dugme-delete" >
							<%= link_to 'Obrisi', post_path(p.id), method: :delete, data: { confirm: 'Jeste li sigurni da zelite obrisati post?' }, :style => 'color:white;'%>
                            
                        	</div>
                        	<% end %>
                        </div>
					    
					    
					  </div>
					</div>
                            
                    <% end %>			


				</div>

				
			</div>
      </div>
</div>

<div class="pager-justify">
	
    <%= will_paginate @posts, renderer: WillPaginate::ActionView::BootstrapLinkRenderer , :previous_label => "&laquo; Prethodna",:next_label => "Sljedeca &raquo;"%>
</div>



</div>