 <div class="container tijelo">

<div class="row">
      <div class="col-lg-12">
            <h3 class="page-header">PRIJAVA
                <hr>
                <h5 class="page-podheader">Forma za prijavu</h5>
                <hr>
            </h3>
      </div>
</div>
  <% if flash[:alert] %>

      <div class="alert alert-danger">
         <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
      <%= flash[:alert] %>
    </div>
 
 <% end %>
        <%= form_tag(sessions_path) do %>


          <% if !flash[:error].nil? %>

          <div class="alert alert-danger">
          <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
          <strong>Greska!</strong> <%= flash[:error] %>
          </div>

          <% end %>

          <div class="form-group page-podheader-input">
          <%= label :mail,"Korisnicki mail:"%><br/>
          <%= text_field_tag :mail,"", class:"form-control" %><br/>
          </div>


          <div class="form-group page-podheader-input">
            <%= label :password,"Korisnicka sifra:" %><br/>
            <%= text_field_tag :password,"",class:"form-control" %><br/>
          </div>


          <p>
            <input type="submit" class="btn btn-default dugme-post" id="dugme-prijava" value="Prijavi se">
            
          </p>

          <% end %>

</div>



