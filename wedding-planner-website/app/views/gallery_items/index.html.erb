<div class="container tijelo">

<div class="row">
    	<div class="col-lg-12">
            <h3 class="page-header">GALERIJA:
                <hr>
                <h5 class="page-podheader">Dio nasih prica</h5>
                <hr>
            </h3>

            <div class="col-md-12">
                  
				<div class="row">
					<% @gallery_items.each do |p|%>

					<div class="card zoom" style="width: 20rem; margin-right: 4%; margin-top:10px; ">
					  <img class="card-img-top" src="<%=p.image_url %>" alt="Card image cap">
					  <div class="card-body">
					    <h5 class="card-title"><%= p.title %></h5>
					    <p class="card-text"><%= p.description %></p>
					    
					  </div>
					</div>
                            
                    <% end %>			


				</div>
			</div>
      </div>
</div>

<div class="pager-justify">
	
    <%= will_paginate @gallery_items, renderer: WillPaginate::ActionView::BootstrapLinkRenderer , :previous_label => "&laquo; Prethodna",:next_label => "Sljedeca &raquo;"%>
</div>



</div>